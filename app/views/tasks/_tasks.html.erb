<h1>タスク一覧</h1>

    <table class="table table-striped">
      <thead>
        <tr>
          <th colspan="2">ユーザ</th>
          <th>id</th>
          <th>タスク</th>
          <th>ステイタス</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
        <% user = task.user %>
          <tr>
            <td><img class="media-object img-rounded" src="<%= gravatar_url(user, options = { size: 30 }) %>" alt=""></td>
            <td><%= user.name %></td>
            <td><%= link_to task.id, task %></td>
            <td><%= task.content %></td>
            <td><%= task.status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div>
      <%= paginate @tasks %>
    </div>

<%= link_to '新規タスクの追加', new_task_path, class: "btn btn-primary" %>
